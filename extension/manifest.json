{
  "manifest_version": 3,
  "name": "Quick Definition Popup",
  "version": "1.2",
  "description": "Instantly shows rich English definitions when you select a word.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.dictionaryapi.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html", 
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "action": {
    "default_title": "Quick Definition"
  }
}